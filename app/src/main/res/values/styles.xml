<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OnboardingAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="OnboardingAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OTPInputField">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:padding">@dimen/otp_verification_input_padding</item>
        <item name="android:layout_margin">@dimen/otp_verification_input_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/otp_verification_input_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">phone</item>
        <item name="android:digits">0123456789</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/ic_otp_input_box</item>
    </style>

    <style name="DefaultOnboardingText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultEdittext">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SinglelineText">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SetReminderOption">
        <item name="android:layout_marginLeft">@dimen/set_reminder_option_icon_spacing</item>
        <item name="android:layout_marginRight">@dimen/set_reminder_option_icon_spacing</item>
        <item name="android:layout_marginTop">@dimen/set_reminder_margin</item>
        <item name="android:layout_marginBottom">@dimen/set_reminder_margin</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="android:background">@drawable/ic_option_background</item>
    </style>
</resources>
