<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:elevation="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/ipr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ipr_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/ipr_date"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ipr_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ipr_task"
            android:layout_marginTop="6dp"
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ipr_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ipr_date"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ipr_setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ipr_time"
            android:layout_marginTop="6dp"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/ipr_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_gradient_divider" />
</LinearLayout>