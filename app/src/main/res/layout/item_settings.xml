<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/is_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/settings_item_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_item_title_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_divider"
        android:layout_below="@id/is_title"
        android:background="@drawable/ic_gradient_divider" />
</RelativeLayout>