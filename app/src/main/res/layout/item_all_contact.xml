<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:elevation="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/iac_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iac_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/iac_name"
            style="@style/SinglelineText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iac_image"
            android:layout_toRightOf="@id/iac_image"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/iac_status"
            style="@style/SinglelineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iac_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iac_image"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/iac_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_gradient_divider" />
</LinearLayout>